<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="col-md-10 p-4">
  <h4 class="fw-bold">แจ้งขอลางาน</h4>
  <p class="text-danger text-end">ลาป่วยได้อีก 20 วัน ลากิจ/ขาดงานได้อีก 1 วัน</p>

  <div class="card p-4 mb-4">
    <form action="/request" method="POST">
     <input type="hidden" name="emp_id" value="<%= emp_id %>">


      <div class="row mb-3">
        <label class="col-md-2 col-form-label">วันที่เริ่มลา</label>
        <div class="col-md-4">
          <input type="date" name="datestart" class="form-control" required>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-md-2 col-form-label">วันที่สิ้นสุด</label>
        <div class="col-md-4">
          <input type="date" name="dateend" class="form-control" required>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-md-2 col-form-label">ประเภทการลา</label>
        <div class="col-md-4">
          <select name="leaveworktype_id" class="form-select" required>
            <option value="">-- เลือกประเภทการลา --</option>
            <option value="1">ลาป่วย</option>
            <option value="2">ลากิจ</option>
            <option value="3">ขาดงาน</option>
          </select>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-md-2 col-form-label">เหตุผลการลา</label>
        <div class="col-md-6">
          <textarea name="description" class="form-control" rows="3" required></textarea>
        </div>
      </div>

      <div class="text-end">
        <button type="submit" class="btn btn-success">ยืนยัน</button>
      </div>
    </form>
  </div>

  <h5 class="fw-bold">ประวัติการแจ้งลา</h5>
  <table class="table table-hover mt-3 text-center align-middle">
    <thead class="table-light">
      <tr>
        <th>วันที่เริ่ม</th>
        <th>วันที่สิ้นสุด</th>
        <th>ประเภทการลา</th>
        <th>เหตุผล</th>
        <th>สถานะ</th>
      </tr>
    </thead>
    <tbody>
      <% if (leaveworks.length > 0) { %>
        <% leaveworks.forEach(function(leave) { %>
          <tr>
            <td><%= leave.leavework_datestart.toISOString().slice(0, 10) %></td>
            <td><%= leave.leavework_end.toISOString().slice(0, 10) %></td>
            <td>
              <% if (leave.leaveworktype_id == 1) { %> ลาป่วย
              <% } else if (leave.leaveworktype_id == 2) { %> ลากิจ
              <% } else if (leave.leaveworktype_id == 3) { %> ขาดงาน
              <% } else { %> อื่นๆ
              <% } %>
            </td>
            <td><%= leave.leavework_description %></td>
            <td>
              <% if (leave.leavework_status === 'pending') { %>
                <span class="badge bg-warning text-dark">รอดำเนินการ</span>
              <% } else if (leave.leavework_status === 'approved') { %>
                <span class="badge bg-success">อนุมัติ</span>
              <% } else if (leave.leavework_status === 'rejected') { %>
                <span class="badge bg-danger">ไม่อนุมัติ</span>
              <% } else { %>
                <span class="badge bg-secondary">-</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5" class="text-muted">ยังไม่มีการแจ้งลางาน</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
