<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="col-md-10 p-4">
  <div class="card p-4">
    <h5 class="text-center">แก้ไขเงินเดือน : <%= employee.emp_name %></h5>

    <form action="/salary/update/<%= employee.emp_id %>" method="POST">
      <div class="mb-3">
        <label>เงินเดือนพื้นฐาน</label>
        <input type="number" step="0.01" name="salary_base" class="form-control" value="<%= employee.salary_base %>" required>
      </div>
      <div class="mb-3">
        <label>ค่าตำแหน่ง / เบี้ยเลี้ยง</label>
        <input type="number" step="0.01" name="salary_allowance" class="form-control" value="<%= employee.salary_allowance %>">
      </div>
      <div class="mb-3">
        <label>โบนัส</label>
        <input type="number" step="0.01" name="salary_bonus" class="form-control" value="<%= employee.salary_bonus %>">
      </div>
      <div class="mb-3">
        <label>ค่าล่วงเวลา (OT)</label>
        <input type="number" step="0.01" name="salary_ot" class="form-control" value="<%= employee.salary_ot %>">
      </div>
      <div class="mb-3">
        <label>หักเงิน</label>
        <input type="number" step="0.01" name="salary_deduction" class="form-control" value="<%= employee.salary_deduction %>">
      </div>

      <div class="d-flex justify-content-end">
        <a href="/salary" class="btn btn-secondary me-2">ย้อนกลับ</a>
        <button type="submit" class="btn btn-success">บันทึก</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
