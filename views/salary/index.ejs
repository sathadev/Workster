<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="col-md-10 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">จัดการเงินเดือน</h4>
    </div>
    <p>หน้าหลัก</p>

    <!-- แสดงข้อผิดพลาด -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
            <i class="fa-solid fa-exclamation-triangle"></i> 
            <%= error %>
        </div>
    <% } %>

    <!-- ฟอร์มค้นหา -->
    <form action="/salary" method="GET" class="mb-3">
        <div class="input-group w-50">
            <input type="text" name="search" class="form-control" 
                   placeholder="ค้นหาชื่อพนักงานหรือตำแหน่ง" 
                   aria-label="ค้นหา"
                   value="<%= typeof searchTerm !== 'undefined' && searchTerm ? searchTerm : '' %>">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                <a href="/salary" class="btn btn-outline-danger">
                    <i class="fa-solid fa-times"></i> ล้างการค้นหา
                </a>
            <% } %>
        </div>
    </form>

    <!-- แสดงผลการค้นหา -->
    <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
        <div class="alert alert-info">
            <i class="fa-solid fa-info-circle"></i> 
            ผลการค้นหา "<strong><%= searchTerm %></strong>" พบ <%= (employees && employees.length) || 0 %> รายการ
        </div>
    <% } %>

    <!-- ตารางแสดงข้อมูล -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th>ชื่อ - สกุล</th>
                    <th>ตำแหน่ง</th>
                    <th>เงินเดือนพื้นฐาน</th>
                    <th>เงินเดือนรวม</th>
                    <th>จัดการ</th>
                </tr>
            </thead>
            <tbody>
                <% if (employees && Array.isArray(employees) && employees.length > 0) { %>
                    <% employees.forEach(function(employee) { %>
                        <tr>
                            <td><%= employee.emp_name || 'ไม่ระบุ' %></td>
                            <td><%= employee.jobpos_name || 'ไม่ระบุ' %></td>
                            <td>
                                <% if (employee.salary_base && employee.salary_base > 0) { %>
                                    <%= Number(employee.salary_base).toLocaleString('th-TH') %> บาท
                                <% } else { %>
                                    <span class="text-muted">ยังไม่กำหนด</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (employee.total_salary && employee.total_salary > 0) { %>
                                    <strong class="text-success">
                                        <%= Number(employee.total_salary).toLocaleString('th-TH') %> บาท
                                    </strong>
                                <% } else { %>
                                    <span class="text-muted">ยังไม่กำหนด</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/salary/edit/<%= employee.emp_id %>" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fa-solid fa-edit"></i> แก้ไข
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-muted py-4">
                            <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
                            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                                ไม่พบข้อมูลที่ค้นหา
                            <% } else { %>
                                ไม่มีข้อมูลพนักงาน
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- สถิติสรุป -->
    <% if (employees && Array.isArray(employees) && employees.length > 0) { %>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">จำนวนพนักงาน</h5>
                        <h2 class="text-primary"><%= employees.length %> คน</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h5 class="card-title text-success">เงินเดือนรวมทั้งหมด</h5>
                        <h2 class="text-success">
                            <% 
                            const totalSalary = employees.reduce((sum, emp) => {
                                return sum + (emp.total_salary ? Number(emp.total_salary) : 0);
                            }, 0);
                            %>
                            <%= totalSalary.toLocaleString('th-TH') %> บาท
                        </h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <h5 class="card-title text-info">เงินเดือนเฉลี่ย</h5>
                        <h2 class="text-info">
                            <% 
                            const employeesWithSalary = employees.filter(emp => emp.total_salary && emp.total_salary > 0);
                            const avgSalary = employeesWithSalary.length > 0 ? 
                                employeesWithSalary.reduce((sum, emp) => sum + Number(emp.total_salary), 0) / employeesWithSalary.length : 0;
                            %>
                            <%= Math.round(avgSalary).toLocaleString('th-TH') %> บาท
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>