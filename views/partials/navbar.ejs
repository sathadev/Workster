<style>
  .link-item {
    position: relative;
    padding-left: 20px; /* ระยะระหว่างจุดกับข้อความ */
  }

  .link-item::before {
    content: "•";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 14px;
    line-height: 1;
  }

  .link-item:hover {
    background-color: #f8f9fa;
    border-radius: 4px;
  }
</style>
