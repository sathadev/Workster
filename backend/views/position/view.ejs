<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="col-md-10 mt-4">
  <h5 class="fw-bold">ตำแหน่ง: <%= jobpos.jobpos_name %></h5>
  <p class="fw-bold">รายชื่อพนักงานในตำแหน่งนี้</p>
<p><a href="/position">หน้าหลัก</a> / ข้อมูลเพิ่มเติม</p>
  <div style="max-width: 300px;">
    <table class="table table-hover text-center align-middle">
      <thead class="table-light">
        <tr>
          <th>ชื่อ - สกุล</th>
        </tr>
      </thead>
      <tbody>
        <% if (employees.length > 0) { %>
          <% employees.forEach(emp => { %>
            <tr>
              <td><%= emp.emp_name %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="1">ไม่พบข้อมูลพนักงาน</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
