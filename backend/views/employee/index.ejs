<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="col-md-10 mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold">พนักงาน</h4>
    <button class="btn btn-outline-secondary" onclick="window.location='employee/add'" style="cursor: pointer;">
      <i class="fa-solid fa-plus"></i> บันทึกข้อมูลพนักงานใหม่
    </button>
  </div>
  <p>หน้าหลัก</p>

  <% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger">
    <i class="fa-solid fa-exclamation-triangle"></i>
    <%= error %>
  </div>
  <% } %>

  <form action="/employee" method="GET" class="mb-3">
    <div class="input-group w-50">
      <input type="text" name="search" class="form-control"
        placeholder="ค้นหาชื่อพนักงานหรือตำแหน่ง"
        aria-label="ค้นหา"
        value="<%= typeof searchTerm !== 'undefined' && searchTerm ? searchTerm : '' %>">
      <button class="btn btn-outline-secondary" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
      <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
      <a href="/employee" class="btn btn-outline-danger">
        <i class="fa-solid fa-times"></i> ล้างการค้นหา
      </a>
      <% } %>
    </div>
  </form>

  <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
  <div class="alert alert-info">
    <i class="fa-solid fa-info-circle"></i>
    ผลการค้นหา "<strong><%= searchTerm %></strong>" พบ <%= (employees && employees.length) || 0 %> รายการ
  </div>
  <% } %>

  <div class="table-responsive">
    <table class="table table-hover table-bordered text-center align-middle">
      <thead class="table-light">
        <tr>
          <th class="profile">โปรไฟล์</th>
          <th>
            <a href="/employee?sort=emp_name&order=<%= sortField === 'emp_name' && sortOrder === 'ASC' ? 'desc' : 'asc' %>"
              style="color: black; text-decoration: none;">
              ชื่อ - สกุล
              <%= sortField==='emp_name' ? (sortOrder==='ASC' ? '▲' : '▼' ) : '' %>
            </a>
          </th>
          <th>
            <a href="/employee?sort=jobpos_name&order=<%= sortField === 'jobpos_name' && sortOrder === 'ASC' ? 'desc' : 'asc' %>"
              style="color: black; text-decoration: none;">
              ตำแหน่ง
              <%= sortField==='jobpos_name' ? (sortOrder==='ASC' ? '▲' : '▼' ) : '' %>
            </a>
          </th>
          <th>จัดการ</th>
        </tr>
      </thead>

      <tbody>
        <% if (employees && Array.isArray(employees) && employees.length > 0) { %>
        <% employees.forEach(emp=> { %>
        <tr>
          <td class="profile-cell">
            <% if (emp.emp_pic) { %>
              <img src="data:image/jpeg;base64,<%= Buffer.from(emp.emp_pic).toString('base64') %>" class="profile-image" alt="โปรไฟล์">
            <% } else { %>
              <img src="/images/profile.jpg" class="profile-image" alt="ไม่มีรูปโปรไฟล์">
            <% } %>
          </td>
          <td>
            <%= emp.emp_name %>
          </td>
          <td>
            <%= emp.jobpos_name %>
          </td>
          <td>
            <a href="/employee/view/<%= emp.emp_id %>" class="btn btn-info btn-sm">
              <i class="fa-solid fa-eye"></i> ดู
            </a>
            <a href="/employee/edit/<%= emp.emp_id %>" class="btn btn-primary btn-sm">
              <i class="fa-solid fa-edit"></i> แก้ไข
            </a>
            <button class="btn btn-danger btn-sm"
              onclick="if(confirm('คุณแน่ใจหรือไม่ที่ต้องการลบพนักงาน <%= emp.emp_name %>?')) { window.location='/employee/delete/<%= emp.emp_id %>' }">
              <i class="fa-solid fa-trash"></i> ลบ
            </button>
          </td>
        </tr>
        <% }) %>
        <% } else { %>
        <tr>
          <td colspan="4" class="text-muted py-4">
            <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
            ไม่พบข้อมูลที่ค้นหา
            <% } else { %>
            ไม่มีข้อมูลพนักงาน
            <% } %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>